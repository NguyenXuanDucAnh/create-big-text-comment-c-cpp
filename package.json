{
  "publisher": "ADN-Linux",
  "name": "ascii-comment-generator",
  "displayName": "ASCII Comment Generator",
  "description": "Generate beautiful ASCII art comments for C/C++",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "author": {
    "name": "Nguyễn Xuân Đức Anh"
  },
  "icon": "icon/icon-app.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "c",
    "cpp",
    "c++",
    "function",
    "search",
    "find"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ascii-comment.generate",
        "title": "Generate ASCII Comment"
      }
    ],
    "keybindings": [
      {
        "command": "ascii-comment.generate",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus && (editorLangId == c || editorLangId == cpp)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.41.0",
    "typescript": "^5.0.4"
  }
}
